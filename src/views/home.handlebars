<div class="productsList">
    <h3>Nuestros productos</h3>
     <ul id="productsUl">
        {{#each products}}
        <li>
            <img src="{{thumbnails}}" alt="{{title}}" width="50">
            <span class="productName">{{title}}</span>
            <span class="productPrice">${{price}}</span>
            <span class="productStock">Stock: {{stock}}</span>
        </li>
        {{/each}}
    </ul>
</div>